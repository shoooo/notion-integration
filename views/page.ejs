<main role="main" class="container col-md-10 col-sm-10" style="margin-top:5vh;">
    <div class="row">
        <div class="col-md-12 blog-main">
            <div class="blog-post">
                <h2 class="blog-post-title text-center">新着記事</h2>
                <div class="card-deck">
                    <% for (let i=0; i< data.length; i++) { %>
                        <div class="card mb-3" style="min-width: 47vh; max-width: 47vh; margin: 20px;" class="justify-content-center">
                            <img class="img-fluid" src="<%= data[i].image %>" alt="Card image">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= data[i].title %>
                                </h5>
                                <p><%= data[i].date %></p>
                                <p><%= data[i].type %></p>
                                <p><%= data[i].stage %></p>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </div>
</main>